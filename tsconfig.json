{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["svelte"],
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["./app/assets/svelte/*"]
    }
  },
  "include": ["./app/assets/svelte/**/*"],
  "exclude": ["node_modules", "target"]
}