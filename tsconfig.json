{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["svelte"],
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["./app/assets/svelte/*"],
      "@/components/*": ["./app/assets/svelte/components/*"],
      "@/layouts/*": ["./app/assets/svelte/layouts/*"],
      "@/screens/*": ["./app/assets/svelte/screens/*"],
      "@/stores/*": ["./app/assets/svelte/stores/*"],
      "@/utils/*": ["./app/assets/svelte/utils/*"],
    }
  },
  "include": ["./app/assets/svelte/**/*"],
  "exclude": ["node_modules", "target"]
}