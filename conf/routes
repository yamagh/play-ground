GET     /                           controllers.web.TaskController.index(request: Request)
GET     /unauthorized               controllers.web.LoginController.unauthorized(request: Request)
GET     /login                      controllers.web.LoginController.index(request: Request)
POST    /login                      controllers.web.LoginController.login(request: Request)

GET     /not-found                  controllers.web.NotFoundController.index(request: Request)

GET     /tasks                      controllers.web.TaskController.index(request: Request)
GET     /tasks/new                  controllers.web.TaskController.create(request: Request)
GET     /tasks/:id/edit             controllers.web.TaskController.edit(request: Request, id: Long)

GET     /assets/*file               controllers.AssetsController.versioned(path="/public", file: Asset)

GET     /api/me                     controllers.api.UserController.me(request: Request)
GET     /api/users                  controllers.api.UserController.find(request: Request)
GET     /api/tasks                  controllers.api.TaskController.find(request: Request)
GET     /api/tasks/export           controllers.api.TaskController.exportCsv(request: Request)
GET     /api/tasks/:id              controllers.api.TaskController.findById(request: Request, id: Long)
POST    /api/tasks                  controllers.api.TaskController.create(request: Request)
PUT     /api/tasks/:id              controllers.api.TaskController.update(request: Request, id: Long)
DELETE  /api/tasks/:id              controllers.api.TaskController.delete(id: Long)
POST    /api/tasks/import           controllers.api.TaskController.importCsv(request: Request)
